@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var rand = new Random();
}

<style>
    .binary-stream {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: -1;
        pointer-events: none;
    }

    .binary-line {
        position: absolute;
        top: -100%;
        white-space: nowrap;
        font-size: 22px;
        color: #00eaff;
        opacity: 0.3;
        animation: scrollBinary 6s linear infinite;
    }

    @@keyframes scrollBinary {
        0% { transform: translateY(-100%); }
        100% { transform: translateY(200%); }
    }

    .home-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        text-align: center;
        z-index: 1;
        position: relative;
    }

    .home-content {
        background-color: rgba(0, 0, 0, 0.65);
        border: 2px solid #ffffff;
        padding: 3rem;
        border-radius: 12px;
        box-shadow: 0 0 20px #ffffff;
        width: 100%;
        max-width: 700px;
    }

    .home-title {
        font-size: 2.5rem;
        color: #ffffff;
        margin-bottom: 1rem;
        text-shadow: 0 0 10px #ffffff;
    }

    .home-subtitle {
        font-size: 1.2rem;
        margin-bottom: 2rem;
        color: #cccccc;
    }

    .home-btn {
        font-family: 'Share Tech Mono', monospace;
        font-size: 1.1rem;
        font-weight: bold;
        border: 2px solid #ffffff;
        background-color: transparent;
        color: #ffffff;
        padding: 1rem;
        width: 100%;
        transition: all 0.2s ease;
    }

        .home-btn:hover {
            background-color: #ffffff;
            color: #000000;
            box-shadow: 0 0 10px #ffffff, 0 0 40px #ffffff;
            transform: scale(1.02);
        }

</style>

<!-- Binary yağmuru -->
<div class="binary-stream">
    @{
        int columnCount = 80;
        for (int i = 0; i < columnCount; i++)
        {
            var left = i * 1.25;
            var delay = rand.Next(0, 100) * 0.1;
    <div class="binary-line" style="left:@($"{left}%"); animation-delay:@($"{delay}s");">
        010101001101010010101001010101010100101010101001010101010010101010101
    </div>
        }
    }
</div>

<div class="home-wrapper">
    <div class="home-content">
        <h1 class="home-title">🔐 Şifreleme Terminali</h1>
        <p class="home-subtitle">Bir işlem seçin. Sistem aktif...</p>

        <div class="row g-4">
            <div class="col-12 col-md-6">
                <a href="/RSA/Index" class="btn home-btn">🔐 RSA Şifreleme</a>
            </div>
            <div class="col-12 col-md-6">
                <a href="/SHA/Index" class="btn home-btn">🧬 SHA-256 Hashleme</a>
            </div>
        </div>
    </div>
</div>
