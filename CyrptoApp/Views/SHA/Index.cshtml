@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "SHA-256 Hashleme";
}

<style>
    body {
        background: url('/img/HackerTema.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Share Tech Mono', monospace;
        color: #ffffff;
    }

    .glass-box {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(12px);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.2);
        padding: 2rem;
        color: #ffffff;
        transition: all 0.3s ease-in-out;
    }

        .glass-box:hover {
            box-shadow: 0 0 30px rgba(255, 255, 255, 0.3);
        }

    .form-label {
        font-weight: 600;
        color: #ffffff;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: #ffffff;
        border-radius: 8px;
    }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.15);
            border-color: #ffffff;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
            color: #fff;
        }

    .btn-glow {
        background-color: #ffffff;
        color: #000000;
        border: none;
        font-weight: bold;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .btn-glow:hover {
            transform: scale(1.05);
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
        }

    .custom-output-box {
        background-color: rgba(255, 255, 255, 0.06);
        border-left: 5px solid #ffffff;
        padding: 1rem;
        border-radius: 10px;
        color: #ffffff;
        word-break: break-word;
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.2);
        margin-top: 2rem;
    }

        .custom-output-box textarea {
            background-color: rgba(255, 255, 255, 0.1);
            color: #ffffff;
            border: 1px solid rgba(255, 255, 255, 0.4);
            border-radius: 6px;
            font-weight: bold;
            text-shadow: 0 0 2px #fff;
        }

            .custom-output-box textarea:focus {
                background-color: rgba(255, 255, 255, 0.15);
                border-color: #ffffff;
                box-shadow: none;
            }

    .output-highlight {
        background-color: rgba(0, 255, 0, 0.08);
        border-left: 5px solid #ffffff;
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.4);
        transition: all 0.3s ease;
    }
</style>


<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="col-12 col-lg-8 glass-box">
        <h2 class="text-center mb-4">🧬 SHA-256 Hashleme Aracı</h2>

        <form asp-action="Hash" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">📝 Metin Girin:</label>
                <input type="text" class="form-control" name="inputText" placeholder="Buraya yaz..." value="@ViewBag.InputText" />
            </div>

            <div class="text-center fw-bold mb-2">— veya —</div>

            <div class="mb-4">
                <label class="form-label">📁 Dosya Yükle:</label>
                <input type="file" class="form-control" name="inputFile" />
            </div>

            <button type="submit" class="btn btn-glow w-100 py-2 fw-bold">⚡ Hashle</button>
        </form>

        @if (ViewBag.HashResult != null)
        {
            <div class="custom-output-box output-highlight">
                <label>🔒 SHA-256 Hash (@(ViewBag.Type == "file" ? "Dosya" : "Metin")) ✔️</label>
                <textarea class="form-control" rows="4" readonly>@ViewBag.HashResult</textarea>
            </div>
        }

    </div>
</div>
